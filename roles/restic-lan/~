---
- name: Restic  | Install restic packages
  dnf:
    state: latest
    name: "{{ item }}"
  with_items:
  - restic
  - python2-scp
  - python3-scp
  - python3-paramiko
  - python3-dnf-plugins-extras-common
  - python3-dnf-plugins-core
  - autofs
  become: True

- name: Restic | make sure /srv exists and is owned by user
  file:
    path: /srv
    state: directory
    mode: 0755
    owner: "{{ ansible_user }}"
    group: "{{ ansible_user }}"

- name: Restic | set up automounter
  copy:
    src: "{{ item }}"
    dest: /etc/
  with_items:
  - auto.master
  - auto.backups
  notify:
  - reload_autofs
  
- name: copy exclude file
  copy:
    src: restic_excludes.txt
    dest: /srv/backups/
    owner: "{{ ansible_user }}"
    group: "{{ ansible_user }}"
    mode: 0644

- name: copy restic pwd file
  copy:
    src: .restic_info
    dest: /srv/backups/
    owner: "{{ ansible_user }}"
    group: "{{ ansible_user }}"
    mode: 0644

- name: copy cron.allow is important
  copy:
    src: cron.allow
    dest: /etc/cron.allow
    owner: root
    group: root
    mode: 0644    
  become: True
 
- name: schedule backups
  cron:
    name: homedirbackup
    hour: 05
    minute: 30
    job: restic -r "{{ ansible_user_dir }}/Backups" backup "{{ ansible_user_dir }}" --exclude-file "{{ ansible_user_dir }}/Backups/restic_excludes.txt" --password-file "{{ ansible_user_dir }}/.restic_info"
  notify:
  - reload cron

- name: prune daily backups
  cron:
    name: prune snapshots with restic
    weekday: 0
    hour: 23
    minute: 45
    job: restic -r "{{ ansible_user_dir }}/Backups" forget --keep-last 7 --keep-weekly 4 --keep-monthly 3 --keep-yearly 1 --prune  
  notify:
  - reload cron
